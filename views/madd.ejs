

<%-include("./h2.ejs")%>






    <header class="page-header page-header-compact page-header-light border-bottom bg-white mb-4">
        <div class="container-xl px-4">
            <div class="page-header-content">
                <div class="row align-items-center justify-content-between pt-3">
                    <div class="col-auto mb-3">
                        <h1 class="page-header-title">
                            <div class="page-header-icon"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-user"><path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path><circle cx="12" cy="7" r="4"></circle></svg></div>
                        Add Device
                        </h1>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- Main page content-->
    <div class="container-xl px-4 mt-4">
        <!-- Account page navigation-->
        
        <hr class="mt-0 mb-4">
        <div class="row">
            <div class="col-xl-4">
                <!-- Profile picture card-->
                <div class="card mb-4 mb-xl-0">
                    <div class="card-header">Profile Picture</div>
                    <div class="card-body text-center">
                        <!-- Profile picture image-->
                        <img class="img-account-profile rounded-circle mb-2" src="images/profile-1.png" alt="" width="70%">
                        <!-- Profile picture help block-->
                        <div class="small font-italic text-muted mb-4"></div>
                        <!-- Profile picture upload button-->
                        <button class="btn btn-primary" type="button">Devices</button>
                    </div>
                </div>
            </div>
            <div class="col-xl-8">
                <!-- Account details card-->
                <div class="card mb-4">
                    <div class="card-header">Graduates Details</div>
                    <div class="card-body">
                        <form action="/addevice2" method="POST">
                            <div class="form-group">
                              <label for="device_id">Device ID:</label>
                              <input type="text" class="form-control" id="device_id" name="id">
                            </div>
                            <div class="form-group">
                              <label for="device_type">Device Type:</label>
                              <select class="form-control" id="device_type" name="type">
                                <option value="lighting">Lighting</option>
                                <option value="water">Water</option>
                                <option value="smart-curtain">Smart Curtain</option>
                                <option value="smart-devices">Smart Devices</option>
                              </select>
                            </div>
                            <div class="form-group">
                              <label for="name">Device Name:</label>
                           <input type="text" class="form-control" id="device_name" name="name">
                            </div>
                          
                            <div class="form-group">
                                <label for="roomid">Room  Id</label>
                    <select class="form-control" id="roomid" name="roomid" required>
                     
                      <option value="">Select a hotel</option>
                      <%for(var i= 0 ;i < data2.length;i++){%>
                        <option value="<%=data2[i].roomid%>"><%=data2[i].roomid%> :  <%=data2[i].name%></option>
                        
                        <%}%>

                  


                      <!-- Add more options here if needed -->
                    </select>
                            </div>
                            <button type="submit" class="btn btn-primary">Add Device</button>
                          </form>
                          
                          
                    </div>
                </div>
            </div>
        </div>
   


        <%-include("./f2.ejs")%>
